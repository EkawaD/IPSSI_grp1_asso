{% extends 'base.html.twig' %}

{% block title %} {{product.name}} adoption {% endblock %}

{% block content %}
    <h2> + /BUTTON/ Info produit > Redirect "Se connecter" </h2>
    <p>{{ product.name }}</p>
    <img class="img-pet" src={{asset('img/upload/'~product.image)}} alt="photo_product">
    <p>{{ product.description }}</p>
    <p>{{ product.price }}</p>
    <a  role="button" class="btn btn-outline-success" href="#" >  Acheter</a>
    {% if is_granted("ROLE_ADMIN") %}
        <a  role="button" class="btn btn-outline-danger" href={{ path('delete_product', { 'id': product.id }) }} > Supprimer produit</a>
        <a  role="button" class="btn btn-outline-warning" href={{ path('update_product', { 'id': product.id }) }} > Modifier produit</a>
    {% endif %}
    <a  role="button" class="btn btn-outline-secondary" href={{ path('products') }} > Retour aux pets adopt√©</a>
{% endblock %}
