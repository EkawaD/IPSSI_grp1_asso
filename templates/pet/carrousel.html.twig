<div class="wrapper-carousel-custom">
    <h1 class="title">Les derniers animaux adoptés 🐱‍👤</h1>
    {% if pets_last %}
        <div id="PetCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                {% for pet in pets_last %}
                    <button type="button" data-bs-target="#PetCarousel" data-bs-slide-to="{{loop.index0}}" class="{% if loop.index0 == 0 %}active{% endif %}"
                    aria-current="true" aria-label="Slide {{loop.index0}}"></button>        
                {% endfor %}
            </div>
            <div class="carousel-inner">
                {% for pet in pets_last %}
                    <div class="carousel-item {% if loop.index0 == 0 %}active{% endif %}"> 
                        <img src="{{asset('img/upload/'~pet.image)}}"/>
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#PetCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#PetCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    
    {% else %}
        <p>Y'en a pas !</p>
    {% endif %}
    
        
</div>