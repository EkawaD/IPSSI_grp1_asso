{% extends 'base.html.twig' %}

{% block title %} Le blog de l'asso {% endblock %}

{% block content %}
    {% for article in articles %}
        <div class="container-fluid">
            {{article.title}}
            {{article.createdAt|date("d/m/Y")}}
            {{article.description|slice(0, 50) ~ '...'  }}
            <a  role="button" class="btn btn-outline-dark" href={{ path('article', { 'id': article.id }) }} > Voir article</a>
            <a  role="button" class="btn btn-outline-danger" href="#" > (Admin) Supprimer article</a>
            <a  role="button" class="btn btn-outline-warning" href="#" > (Admin) Modifier article</a>
        </div>    
    {% else %}
        <p> Pas d'articles actuellement </p>
    {% endfor %}

    <a  role="button" class="btn btn-outline-dark" href="/blog/new"> (Admin) Ajouter un article</a>
{% endblock %}
