<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# <link rel="icon" type="image/png" href="logo.png" /> #}
        <link rel="icon" type="image/png" href="{{ asset('logo.png') }}" />

        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
           <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
           <link href="{{ asset('css/global.css') }}" rel="stylesheet"/>
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js" integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            {% block nav %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <img id="logo-assoc" class="rounded-circle" src="{{ asset('logo.png') }}"/>
                    </a>
                   
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                        <a class="nav-link {{ app.request.get('_route') == 'adopt' ? 'active' }}" aria-current="page" href={{ path('adopt') }}>Adopter un animal</a>
                        <a class="nav-link {{ app.request.get('_route') == 'products' ? 'active' }}" href={{ path('products') }}>Boutique</a>
                        <a class="nav-link {{ app.request.get('_route') == 'blog' ? 'active' }}" href={{ path('blog') }}>Blog</a>
                        </div>
                    </div>
                    <div class="d-flex">
                        <a role="button" type="button" id="donate-button"  href={{ path('donate')}}>Donate ðŸ¥º</button>
                        {% if app.user %}<a role="button" class="btn btn-outline-danger" type="button" href={{ path('app_logout')}}>DÃ©connection</a>
                        {% else %}<a role="button" class="btn btn-outline-light" type="button" href={{ path('app_login')}}>Se connecter</a>
                        {% endif %}
                        
                    </div>
                    
                </div>
            </nav>
            {% endblock %}

            <div class="content">
                {% block content %}
                {% endblock %}
            </div>
           

            <footer>
                <div class="pt-4">
                    <p>Site crÃ©Ã© dans le cadre du TP Symfony</p>
                    <p>Groupe 1 : Sarah PINTO, Brandon SORET, SÃ©bastien GRIVEL, Bastien EDERHY</p>
                </div>
                
            </footer>

        {% endblock %}
    </body>
</html>
